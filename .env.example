# Discord Bot
DISCORD_TOKEN=your_discord_bot_token
GUILD_ID=your_discord_server_id
BOT_API_KEY=optional_internal_key

# Database
DB_PATH=./data/studybot.sqlite3

# LLM Provider (Groq Recommended)
LLM_PROVIDER=groq
GROQ_API_KEY=your_groq_api_key
OPENAI_BASE_URL=https://api.groq.com/openai/v1
DEFAULT_MODEL=llama-3.1-8b-instant

# Optional: Local Ollama
# OPENAI_BASE_URL=http://localhost:11434/v1
# DEFAULT_MODEL=qwen2.5:14b-instruct-q5_K_M

# Web Session
ENV=prod
WEB_SESSION_SECRET=your_super_secret_key

# Discord OAuth (Web Login)
DISCORD_CLIENT_ID=your_client_id
DISCORD_CLIENT_SECRET=your_client_secret
DISCORD_REDIRECT_URI=http://127.0.0.1:8000/callback